<div id="page-wrapper">
	<div id="page">
		<div class="header-top-wrap">
			<div class="header-top container">
				{{ page.top_header }}
			</div>
		</div>
		{% if page.header %}
			<header id="header" class="header bg-[#fff] clearfix" role="banner" aria-label="{{ 'Site header'|t }}">
				<div class="inner-header flex items-center justify-between container">{{ page.header }}</div>
			</header>
		{% endif %}
		{% if page.contentop %}
			<div class="content-top-wrap">
				<div class="content-top">
					{{ page.contentop }}
				</div>
			</div>
		{% endif %}
		{% if page.content %}
		<main role="main">
			{# <div class="container inner-main bg-[#fff]">
				<div class="page-content">{{ page.content }}</div>
				{% if node is defined and  page.blockright %}
					<div class="block-right">
						{{ page.blockright }} 
					</div>
				{% endif %}	
			</div> #}
			<div class="container inner-main bg-[#fff] {% if node is defined and page.blockright %}flex flex-col lg:flex-row gap-6{% endif %}">
				<div class="page-content w-full {% if node is defined and page.blockright %}lg:w-2/3{% endif %}">
				    {% if node is defined %}
						<h1 class="title text-[26px] font-bold mb-4">{{ node.label }}</h1>
					{% endif %}
					{{ page.content }}
				</div>
				{% if node is defined and page.blockright %}
					<div class="block-right w-full lg:w-1/3">
					{{ page.blockright }}
					</div>
				{% endif %}
			</div>
		</main>
		{% endif %}
		
		{% if page.contentbottom %}
			<div class="content-bottom  bg-[#fff]">
				<div class="mt-[30px] bg-[#fff]">
					{{ page.contentbottom }}
			    </div>
			</div>
		{% endif %}
		{% if page.khachhang %}
			<div class="region-khachhang">
				<div class="container khachhang">
					{{ page.khachhang }}
			    </div>
			</div>
		{% endif %}
		{% if page.footer %}
			<footer class="footer-wap bg-[#242C42] ">
				<div class="container flex justify-between py-[10px]">{{page.footer}}</div>
			</footer>
		{% endif %}
		{% if page.copyright %}
			<div class="copyright-wap">
				<div class="copyright-inner">{{page.copyright}}</div>
			</div>
		{% endif %}
	</div>
</div>
