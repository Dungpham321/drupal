<div id="page-wrapper">
	<div id="page">
		<div class="header-top-wrap">
			<div class="header-top container">
				{{ page.top_header }}
			</div>
		</div>
		{% if page.header %}
			<header id="header" class="header bg-[#fff] clearfix" role="banner" aria-label="{{ 'Site header'|t }}">
				<div class="inner-header flex items-center justify-between container">{{ page.header }}</div>
			</header>
		{% endif %}
		{% if page.contentop %}
			<div class="content-top-wrap">
				<div class="content-top">
					{{ page.contentop }}
				</div>
			</div>
		{% endif %}
		<main role="main">
			<div class="container inner-main bg-[#fff] py-6 px-4 shadow-md rounded-lg">
		       {{ page.content }}
			</div>
		</main>
		{% if page.contentbottom %}
			<div class="content-bottom">
				<div class="mt-[30px]">
					{{ page.contentbottom }}
			    </div>
			</div>
		{% endif %}
		
		{% if page.footer %}
			<footer class="text-center py-4 text-sm text-gray-500">
				Â©
				{{ "now"|date("Y") }}
				{{ site_name }}
			</footer>
		{% endif %}
	</div>
</div>
