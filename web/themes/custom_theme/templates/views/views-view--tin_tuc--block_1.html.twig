<div class="view-news-wrapper container">
  <div class="flex flex-col md:flex-row items-center justify-between mb-6">
    <h2 class="text-[#3A3A3A] text-lg font-bold">
      Tin tức mới
    </h2>
    <a href="/tin-tuc" class="text-blue-600 hover:underline">
      Xem thêm ->
    </a>
  </div>
  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Tin nổi bật -->
    <div class="news-featured p-2 lg:p-4 shadow-md hover:shadow-lg transition-shadow">
      {{ rows }}
    </div>
    <!-- Danh sách tin phụ -->
    <div class="news-list p-2 lg:p-4">
      {% for row in tin_tuc_phu %}
        <div class="tin-tuc-phu-item flex gap-4 mb-6 border-b border-gray-200 pb-4 last:border-0 last:pb-0">
          <!-- Ảnh -->
          <div class="anh-tin-tuc-phu w-1/3 overflow-hidden rounded-xl">
            <img src="{{ row.anh }}" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
          </div>
          <!-- Nội dung -->
          <div class="tin-tuc-phu-content flex-1">
            <h3 class="tin-tuc-phu-title text-base lg:text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
              {{ row.title }}
            </h3>
            <div class="tin-tuc-phu-body text-sm text-gray-600 mt-1 line-clamp-3">
              {{ row.mo_ta|raw }}
            </div>
          </div>

        </div>
      {% endfor %}
    </div>
  </div>
</div>
