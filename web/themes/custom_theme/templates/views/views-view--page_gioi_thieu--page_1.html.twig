<div class="gioi-thieu-tabs-wrapper shadow-md rounded-lg mt-[-40px]">
  <div class="gioi-thieu-tabs flex justify-center gap-4">
    {% for tab in list_gioi_thieu %}
      <button class="tab-btn {{ loop.first ? 'active' : '' }}" data-tab="tab-{{ tab.id }}">
        {{ tab.tieu_de }}
      </button>
    {% endfor %}
  </div>
  <div class="gioi-thieu-tab-content mt-6 px-4">
    {% for tab in list_gioi_thieu %}
      <div id="tab-{{ tab.id }}" class="tab-panel {{ loop.first ? 'active' : '' }}">
        <div class="rich-content">
          {{ tab.noi_dung|raw }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
